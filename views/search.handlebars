<section class="cards">
    <div class="card one">
        <div class="card-body">
            <h5 class="card-title text-center">Search by ID</h5>
            <div class="input-group">
                <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                    aria-describedby="search-addon" id="search-input" />
                <select class="form-select search-category" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    <option value="1">Artist</option>
                    <option value="2">Art</option>
                </select>
                <button type="button" class="btn btn-outline-primary searchbutton">search</button>

            </div>

        </div>
    </div>
</section>
<br>
<br>
<!-- Dynamically generated section for results-->
<section>
    <h3 class="text-center">
        Search Results
    </h3>
    <section class="d-flex row flex-wrap justify-content-around">
        <!--Insert Handlebar-->
        {{#each artPieces as |art| }}
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <img src="{{art.img}}" class="card-img-top" alt="{{art.name}}">
                <h5 class="card-title">
                    <!--Insert Piece Name-->
                    <span id="art-title">{{art.name}} </span> by {{art.artist}}
                    <br>
                    <span id="art-price">{{art.price}} </span>
                </h5>
                <select class="form-select buy-option" aria-label="Default select example">
                    <option selected>Select Buy Option</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <br>
                <button class="homebutton cartbutton"> <a href="#" class="card-link buy">Add to Cart</a></button>
            </div>
        </div>
        {{/each}}
    </section>
</section>
{{#section 'script'}}

<script type="application/javascript" src="js/search.js"></script>

{{/section}}