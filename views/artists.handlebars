<section class="cards">
    <div class="card one">
        <div class="card-body">
            <h3 class="card-title text-center">Artists Collection</h3>
            <p class="card-text">
                Choose from one of our artists and see their wonderful collections.
            </p>
        </div>
    </div>
</section>
<br>

<section>
    <h3 class="text-center">
        Artists!
    </h3>
    <!--Dynamically generated artists-->
    <section class="d-flex flex row">
        <!--Insert Handlebar-->
        {{#each artists as |artist| }}
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <h5 class="card-title">
                    {{artist.name}}
                </h5>
                <h6 class="card-subtitle">
                    <a href="mailto:{{this.email}}">
                        {{this.email}}
                    </a>
                </h6>
                <button class="homebutton seeWorkButton"> <a href="/artistprofile/{{this.id}}" class="card-link">See My
                        Pieces</a></button>
            </div>
        </div>
        {{/each}}
    </section>
</section>
<br>