<section class="cards">
    <div class="card one">
        <div class="card-body">
            <h3 class="card-title text-center">My Profile</h3>
            <p class="card-text text-center profile">
                id
                <br>
                name
                <br>
                <a href="mailto:{{user.email}}"> Email </a>
                <br>
            </p>
        </div>
    </div>
</section>
<br>

<section>
    <h3 class="text-center">
        My Favorites!
    </h3>
    <!--Insert Handlebar-->
    < <section class="d-flex flex row">
        <!--Insert Handlebar-->
        {{#each artPieces as |art| }}
        <div class="card" style="width: 18rem;">
            <div class="card-body text-center">
                <img src="{{art.img}}" class="card-img-top" alt="{{art.name}}">
                <h5 class="card-title">
                    <!--Insert Piece Name-->
                    {{art.name}} by {{art.artist}}
                    <br>
                    {{art.price}}
                </h5>
                <select class="form-select" aria-label="Default select example">
                    <option selected>Select Buy Option</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <br>
                <button class="homebutton"> <a href="#" class="card-link buy">Buy Me</a></button>
            </div>
        </div>
        {{/each}}
</section>
</section>